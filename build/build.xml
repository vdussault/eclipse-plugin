	<!-- Sign all plugins and features that were built -->
	<target name="sign-plugin-and-feature">
		<!-- Sign resulting plugin and feature -->
		<exec executable="${jarsigner.bin}">
			<arg path="${target.dir}/${archivePrefix}/**/*.jar" />
		</exec>
	</target>


